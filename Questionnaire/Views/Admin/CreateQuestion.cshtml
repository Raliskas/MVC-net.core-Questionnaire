@model Question
@{
}
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Создать вопрос</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>Заполните поле</h4></div>
        <h2>Вопрос № @ViewBag.NumQuest</h2>
        <div class="panel-body">
            <form class="p-a-1" asp-action="CreateQuestion" method="post">
                <div asp-validation-summary="All"></div>
                <div id="text">
                    <div class="form-group">
                        <label asp-for="QuestionText">Введите текст вопроса</label>
                        <input class="form-control" asp-for="QuestionText" />
                    </div>
                    <div class="form-group">
                        <label>Вариант ответа №1</label>
                        <input class="form-control" name="Choices[0].ChoiceText" />
                    </div>
                    <div class="form-group">
                        <label>True/False</label>
                        <select class="form-control" name="Choices[0].IsCorrect">
                            <option value='true'>True</option>
                            <option value='false'>False</option>
                        </select>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary" type="submit">Создать</button>
                    </div>
                </div>
                <a class="btn btn-primary" asp-action="AdminView">Хватит</a>
            </form>
        </div>
    </div>
</body>
<p><a class="addLink">НАЖМИ! чтобы добавить новый элемент</a></p>


@section Scripts {
    <script>
        $(function plus() {
            var i = 0;
            $('.addLink').click(function () {
                i++;
                var html2Add = "<div class='form-group'>" +
                "<label>Вариант ответа №"+(i+1)+"</label>" +
                "<input class='form-control' name='Choices[" + i + "].ChoiceText'/>" + "</div>" +
                "<div class='form-group'>" +
                "<label>True/False</label>" +
                "<select class='form-control' name='Choices[" + i + "].IsCorrect'>" +
                "<option value='true'>True</option>" +
                "<option value='false'>False</option>" +
                "</select>" +
                "</div></div>";
                $('#text').append(html2Add);
            })
        })
    </script>
}